{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "serpeo",
  "version": "0.1.0",
  "identifier": "com.serpeo.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "serpeo",
        "width": 800,
        "height": 600
      }
    ],

    "security": {
      "csp": null
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "http": {
      "all": true,
      "request": true,
      "scope": ["https://**", "http://**"]
    }
  }
}
