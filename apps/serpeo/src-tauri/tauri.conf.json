{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Serpeo",
  "version": "../package.json",
  "identifier": "com.serpeo.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Serpeo",
        "width": 900,
        "height": 900
      }
    ],

    "security": {
      "csp": null
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",

    "iOS": {}
  },
  "plugins": {
    "http": {
      "all": true,
      "request": true,
      "scope": ["https://**", "http://**"]
    }
  }
}
