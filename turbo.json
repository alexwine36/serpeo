{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "test": {
      "dependsOn": ["@repo/vitest-config#build"],
      "outputs": ["coverage.json"]
    },
    "tauri:dev": {
      "cache": false,
      "persistent": true
    },
    "typecheck": {},
    "//#js-lint": {},
    "//#rust-lint": {},
    "//#js-format": {
      "dependsOn": ["sync:fix"]
    },
    "//#rust-format": {},
    "//#rust-test": {},
    "//#sync:lint": {},
    "//#sync:fix": {}
  }
}
